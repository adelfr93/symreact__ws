<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Administration!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {# {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %} #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets-admin/style.css') }}" />
        {# {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %} #}
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
                menubar: false,
                plugins: [
                    'a_tinymce_plugin',
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount'
                ],
                toolbar: 'undo redo | formatselect | ' +
                'bold italic backcolor | alignleft aligncenter ' +
                'alignright alignjustify | bullist numlist outdent indent | ' +
                'removeformat | help',
                content_style: 'body { font-family:Helvetica,Arial,sans-serif; font-size:14px }',
                a_plugin_option: true,
                a_configuration_option: 400
                });
        </script>
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Vertical Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto flex-column vertical-nav">
        <li class="nav-item {% if app.request.requestUri == path('admin_dashboard') %}active{% endif %}">
            <a class="nav-link" href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="nav-item {% if app.request.requestUri == path('app_product_index') %}active{% endif %}">
            <a class="nav-link" href="{{ path('app_product_index') }}">Products</a>
        </li>
        <li class="nav-item {% if app.request.requestUri == path('app_category_index') %}active{% endif %}">
            <a class="nav-link" href="{{ path('app_category_index') }}">Categories</a>
        </li>
        <li class="nav-item {% if app.request.requestUri == path('app_user_index') %}active{% endif %}">
            <a class="nav-link" href="{{ path('app_user_index') }}">Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Setting</a>
        </li>
        </ul>
        <ul class="navbar-nav ml-auto">
         <li class="nav-item dropdown nav-actions">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            User
                            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">Action</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="{{ path('app_logout') }}">Log Out</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Foo</a>
        </li>
       
        </ul>

    </div>
    </nav>

        <div class="content-body">
        {% block body %}{% endblock %}
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
        
        
    </body>
</html>
